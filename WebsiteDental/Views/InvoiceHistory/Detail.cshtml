@model WebsiteDental.Models.InvoiceViewModel
<style>
    .invoice-container {
        font-family: Arial, sans-serif;
        max-width: 800px;
        margin: 20px auto;
        padding: 30px;
        border: 1px solid #ddd;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        background-color: white;
    }

    .invoice-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #3498db;
    }

    .invoice-logo {
        max-width: 200px;
        height: auto;
    }

    .invoice-title {
        color: #2c3e50;
        font-size: 24px;
        text-align: right;
    }

    .invoice-id {
        font-size: 18px;
        color: #3498db;
        margin-top: 5px;
    }

    .invoice-section {
        margin-bottom: 25px;
    }

        .invoice-section h3 {
            color: #2c3e50;
            padding-bottom: 8px;
            border-bottom: 1px solid #eee;
            margin-bottom: 15px;
        }

    .invoice-info p {
        margin: 5px 0;
        color: #333;
        line-height: 1.5;
    }

    .invoice-info strong {
        color: #2c3e50;
        width: 120px;
        display: inline-block;
    }

    .invoice-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .invoice-table th {
            background-color: #f8f9fa;
            color: #2c3e50;
            font-weight: bold;
            padding: 12px;
            text-align: left;
            border-bottom: 2px solid #3498db;
        }

        .invoice-table td {
            padding: 12px;
            border-bottom: 1px solid #eee;
        }

    .invoice-total {
        text-align: right;
        font-size: 18px;
        font-weight: bold;
        color: #2c3e50;
        margin-top: 20px;
    }

    .invoice-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #eee;
    }

    .invoice-btn {
        display: inline-flex;
        align-items: center;
        padding: 8px 16px;
        background-color: #3498db;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

        .invoice-btn:hover {
            background-color: #2980b9;
        }

        .invoice-btn i {
            margin-right: 5px;
        }

    .back-btn {
        background-color: #95a5a6;
    }

        .back-btn:hover {
            background-color: #7f8c8d;
        }

    .print-btn {
        background-color: #2ecc71;
    }

        .print-btn:hover {
            background-color: #27ae60;
        }

    .pdf-btn {
        background-color: #e74c3c;
    }

        .pdf-btn:hover {
            background-color: #c0392b;
        }

    .excel-btn {
        background-color: #27ae60;
    }

        .excel-btn:hover {
            background-color: #219653;
        }

    /* Icon styles */
    .fa {
        margin-right: 5px;
    }

    @@media print {
        .invoice-actions

    {
        display: none;
    }

    .invoice-container {
        box-shadow: none;
        border: none;
        padding: 0;
    }

    }
</style>

<div class="invoice-container">
    <div class="invoice-header">
        <div>
            <img src="/assets/img/logo.jpg" alt="Dental Care Logo" class="invoice-logo" />
        </div>
        <div>
            <h1 class="invoice-title">HÓA ĐƠN DỊCH VỤ</h1>
            <div class="invoice-id">Mã hóa đơn: @Model.InvoiceId</div>
        </div>
    </div>

    @if (Model != null)
    {
        <div class="invoice-section">
            <h3>THÔNG TIN KHÁCH HÀNG</h3>
            <div class="invoice-info">
                <p><strong>Khách hàng:</strong> @Model.User.Username</p>
                <p><strong>Email:</strong> @Model.User.Email</p>
                <p><strong>Điện thoại:</strong> @Model.User.Phone</p>
                <p><strong>Địa chỉ:</strong> @Model.User.Address</p>
            </div>
        </div>

        <div class="invoice-section">
            <h3>THÔNG TIN HÓA ĐƠN</h3>
            <div class="invoice-info">
                <p><strong>Ngày lập:</strong> @Model.OrderDate?.ToString("dd/MM/yyyy")</p>
            </div>
        </div>

        <div class="invoice-section">
            <h3>CHI TIẾT DỊCH VỤ</h3>
            @if (Model.Details != null && Model.Details.Any())
            {
                <table class="invoice-table">
                    <thead>
                        <tr>
                            <th>Dịch vụ</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in Model.Details)
                        {
                            <tr>
                                <td>@detail.ProductName</td>
                                <td>@detail.Quantity</td>
                                <td>@detail.FinalAmount?.ToString("N0") VNĐ</td>
                                <td>@((detail.Quantity * detail.FinalAmount)?.ToString("N0")) VNĐ</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="invoice-total">
                    Tổng cộng: @Model.TotalAmount?.ToString("N0") VNĐ
                </div>
            }
            else
            {
                <p>Không có dịch vụ nào.</p>
            }
        </div>

        <div class="invoice-actions">
            <a href="/Invoice" class="invoice-btn back-btn">
                <i class="fa fa-arrow-left"></i> Quay lại
            </a>
            <button onclick="window.print()" class="invoice-btn print-btn">
                <i class="fa fa-print"></i> In hóa đơn
            </button>
            <button onclick="exportToPDF()" class="invoice-btn pdf-btn">
                <i class="fa fa-file-pdf-o"></i> Xuất PDF
            </button>
            <button onclick="exportToExcel()" class="invoice-btn excel-btn">
                <i class="fa fa-file-excel-o"></i> Xuất Excel
            </button>
        </div>
    }
    else
    {
        <p>Không tìm thấy hóa đơn.</p>
    }
</div>

<!-- Font Awesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<script>
    function exportToPDF() {
        // Đoạn mã JavaScript để xuất PDF - Thực tế sẽ cần tích hợp với thư viện
        alert('Chức năng xuất PDF đang được phát triển');
    }

    function exportToExcel() {
        // Đoạn mã JavaScript để xuất Excel - Thực tế sẽ cần tích hợp với thư viện
        alert('Chức năng xuất Excel đang được phát triển');
    }
</script>