@section Styles {
<link href="~/assets/css/Pages/Style_Products.css" rel="stylesheet">
}
@{
    var ProductCategories = ViewBag.ProductCategories as List<ProductCategory> ?? new List<ProductCategory>();
    var Products = ViewBag.Products as List<Product> ?? new List<Product>();
}
<div class="page-container">
    <div class="sidebar-container">
        <div class="categories-sidebar">
            <div class="category-section">
                <div class="category-title">Danh Mục</div>
                @foreach (var category in ProductCategories)
                {
                    <a href="@Url.Action("Index", "Products", new { categoryId = category.Id })">
                        @category.CategoryName
                    </a>
                }
            </div>
            <div class="category-section">
                <div class="category-title">Xuất Xứ</div>
                <ul class="category-list origin-list">
                    <li>Việt Nam</li>
                    <li>Nhật Bản</li>
                    <li>Hàn Quốc</li>
                    <li>Hoa kỳ</li>
                    <li>Thụy Sỹ</li>
                    <li>Úc</li>
                    <li>Thái lan</li>
                </ul>
            </div>
        </div>

        <div class="vertical-ad">
            <img src="/assets/img/Discounts/anh11.webp" alt="Quảng cáo" style="width: 100%; height: 100%; object-fit: cover;">
        </div>
        <div class="vertical-ad">
            <img src="/assets/img/Discounts/anh12.webp" alt="Quảng cáo" style="width: 100%; height: 100%; object-fit: cover;">
        </div>
    </div>

    <div class="products-container">



        @foreach (var item in Products)
        {
            <div class="product-card">
                <div class="product-top-tag">
                <span class="discount-tag">2%</span>
                <span class="product-type">Lon</span>
            </div>
            <div class="product-image">
                <img src="@item.Image" alt="ColosBaby IQ Gold">
            </div>
            <div class="product-details">
                <div class="product-title">@item.ProductName</div>
                <div class="price-container">
                    <span class="price">279.000đ</span>
                    <span class="price-discount">Giảm 5k</span>
                </div>
                <span class="origin">Xuất xứ: Việt Nam</span>
                <span class="sold-badge">Đã bán: 3</span>
                <button class="add-to-cart">Thêm vào giỏ</button>
            </div>
        </div>

}

    </div>
</div>

<div class="pagination">
    <div class="pagination-container">
        <button class="pagination-btn">&lt; Trước</button>
        <button class="pagination-btn">1</button>
        <button class="pagination-btn active">2</button>
        <button class="pagination-btn">3</button>
        <button class="pagination-btn ellipsis">...</button>
        <button class="pagination-btn">5</button>
        <button class="pagination-btn">Tiếp theo &gt;</button>
    </div>
</div>