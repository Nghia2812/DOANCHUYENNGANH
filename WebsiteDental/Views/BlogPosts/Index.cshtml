@section Styles {
<link href="~/assets/css/BlogPosts.css" rel="stylesheet">
}
@{
    var categories = ViewBag.blogcategories as List<BlogCategory> ?? new List<BlogCategory>();
    var blogPosts = ViewBag.Blogposts as List<BlogPost> ?? new List<BlogPost>();
}

<!-- Lấy danh mục của các bài viết ra ngoài -->
<div class="top-navigation">
    <div class="top-navigation-container">
        <div class="sidebar-categories">
            @foreach (var n in categories)
            {              
                    <a href="@Url.Action("Index", "BlogPosts", new { categoryId = n.Id })">

                    @n.CategoryName
                </a>
            }
        </div>
    </div>
</div>


<!-- Bài viết hiện thị theo danh mục ạ-->
<div class="container">
    <div class="main-content">
        <h1 class="section-title">Bài viết mới nhất</h1>

        <div class="articles">
            <!-- Các bài viết giữ nguyên như phiên bản trước -->

            @foreach (var item in blogPosts)
            {
                <div class="article-card">
                    <img src="@item.FeaturedImage" alt="Bác sĩ" class="article-image">
                <div class="article-content">
                    <h2 class="article-title">@item.Title</h2>
                    <p class="article-excerpt">@item.Content</p>
                        <a asp-controller="DetailBlogPosts" asp-action="DetailBlog" asp-route-id="@item.Id" class="article-link">Xem thêm</a>
                </div>
            </div>
            }

            <!-- Các bài viết khác giữ nguyên -->
            <!-- ... -->
        </div>

        <div class="pagination">
            <a href="#" class="page active">1</a>
            <a href="#" class="page">2</a>
            <a href="#" class="page">3</a>
            <a href="#" class="page">4</a>
        </div>
    </div>
</div>