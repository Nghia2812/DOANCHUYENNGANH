@model WebsiteDental.Models.MenuPage
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: white !important;
    }

    .content-wrapper {
        margin-left: 230px; /* Adjust based on your sidebar width */
        padding: 20px 30px;
        min-height: calc(100vh - 60px); /* Adjust based on your header height */
    }

    .details-container {
        max-width: 800px;
        margin: 0 auto;
        background-color: #f8f9fa;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .label-col {
        font-weight: 600;
        color: #495057;
    }

    .action-buttons {
        margin-top: 20px;
        text-align: center;
    }

        .action-buttons a {
            display: inline-block;
            padding: 8px 16px;
            margin: 0 10px;
            background-color: #304156;
            color: white;
            border-radius: 4px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .action-buttons a:hover {
                background-color: #1e2b3c;
            }

    h1, h4 {
        color: #304156;
        text-align: center;
    }
</style>

<div class="content-wrapper">
    <div class="details-container">
        <h1 class="mb-4">Chi Tiết</h1>
        <div>
            <h4 class="mb-3">MenuPage</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 label-col">

                    @Html.DisplayNameFor(model => model.PageName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PageName)
                </dd>
                <dt class="col-sm-3 label-col">
                    @Html.DisplayNameFor(model => model.Url)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Url)
                </dd>
                <dt class="col-sm-3 label-col">
                    @Html.DisplayNameFor(model => model.Position)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Position)
                </dd>
                <dt class="col-sm-3 label-col">
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IsActive)
                </dd>
                <dt class="col-sm-3 label-col">
                    @Html.DisplayNameFor(model => model.Parent)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Parent.Id)
                </dd>
            </dl>
        </div>
        <div class="action-buttons">
            <a asp-action="Edit" asp-route-id="@Model?.Id">Sửa</a>
            <a asp-action="Index">Quay lại</a>
        </div>
    </div>
</div>