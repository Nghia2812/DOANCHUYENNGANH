@model WebsiteDental.Models.CustomerReview

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px; /* Đẩy nội dung sang phải để tránh thanh sidebar */
        padding: 15px 20px 0 20px; /* Giảm padding phía trên */
    }

    .page-intro {
        margin-bottom: 15px; /* Khoảng cách với form */
    }

        .page-intro h4 {
            margin-top: 0; /* Loại bỏ margin top */
            margin-bottom: 5px; /* Giảm margin bottom */
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
            color: #dc3545;
            font-weight: 500;
        }

    .delete-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 20px;
        margin-bottom: 20px;
        border-left: 4px solid #dc3545;
    }

    .review-info {
        display: flex;
        margin-bottom: 20px;
        padding-bottom: 20px;
        border-bottom: 1px solid #f0f0f0;
    }

    .review-image {
        width: 120px;
        height: 120px;
        border-radius: 5px;
        object-fit: cover;
        margin-right: 20px;
        border: 1px solid #e0e0e0;
    }

    .review-header {
        flex: 1;
    }

    .customer-name {
        font-size: 22px;
        font-weight: 600;
        color: #1a3b5d;
        margin-bottom: 5px;
    }

    .customer-email {
        font-size: 16px;
        color: #666;
        margin-bottom: 10px;
    }

    .review-status {
        display: inline-block;
        padding: 3px 8px;
        border-radius: 12px;
        font-size: 12px;
        margin-bottom: 10px;
    }

    .status-active {
        background-color: #e8f5e9;
        color: #2e7d32;
    }

    .status-inactive {
        background-color: #ffebee;
        color: #c62828;
    }

    .details-section {
        margin-bottom: 30px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: #1a3b5d;
        margin-bottom: 15px;
        padding-bottom: 8px;
        border-bottom: 1px solid #f0f0f0;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
    }

    .info-item {
        margin-bottom: 8px;
    }

    .info-label {
        font-weight: 500;
        color: #666;
        margin-bottom: 3px;
    }

    .info-value {
        color: #333;
    }

    .text-block {
        background-color: #f9f9f9;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 10px;
        max-height: 100px;
        overflow-y: auto;
    }

    .warning-box {
        background-color: #fff8e1;
        border-left: 4px solid #ffc107;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .warning-title {
        color: #d97706;
        font-weight: 600;
        margin-bottom: 5px;
        display: flex;
        align-items: center;
    }

        .warning-title i {
            margin-right: 8px;
        }

    .action-buttons {
        margin-top: 20px;
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
        font-size: 14px;
    }

        .btn i {
            margin-right: 5px;
        }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #bb2d3b;
            color: white;
        }

    .btn-secondary {
        background-color: #e9ecef;
        color: #495057;
    }

        .btn-secondary:hover {
            background-color: #dee2e6;
            color: #212529;
        }

    /* Đáp ứng thiết bị di động */
    @@media(max - width: 992px)

    {
        .content-wrapper

    {
        margin-left: 0;
        padding: 10px;
    }

    .review-info {
        flex-direction: column;
    }

    .review-image {
        margin-right: 0;
        margin-bottom: 15px;
        width: 100px;
        height: 100px;
    }

    .info-grid {
        grid-template-columns: 1fr;
    }

    }

        .product-image {
            width: 200px; /* Hoặc độ rộng cụ thể ví dụ: 300px */
            height: 200px; /* Để ảnh tự động điều chỉnh chiều cao */
            border-radius: 10px; /* Bo góc ảnh nếu muốn */
            object-fit: cover; /* Giữ tỷ lệ khung hình nhưng cắt bớt nếu cần */
        }

</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Delete</h4>
        <p><i class="fa fa-exclamation-triangle"></i> Are you sure you want to delete this?</p>
    </div>

    <div class="delete-container">
        <!-- Thông tin tổng quan của review -->
        <div class="review-info">
                <div class="review-image-container">
                    @if (Model.ImageData != null && Model.ImageData.Length > 0)
                    {
                        <img src="@Model.ImageData" alt="Product Image" class="product-image" />

                    }
                    else
                    {
                        <div class="review-image" style="display: flex; align-items: center; justify-content: center; background-color: #f0f0f0;">
                            <i class="fa fa-comment" style="font-size: 40px; color: #aaa;"></i>
                        </div>
                    }
                </div>


            <div class="review-header">
                <h2 class="customer-name">@Model.Customer</h2>
                <div class="customer-email">@Model.Email</div>
                @if (Model.IsActive == true)
                {
                    <div class="review-status status-active">Active</div>
                }
                else
                {
                    <div class="review-status status-inactive">Inactive</div>
                }
                <div class="review-rating">
                    <span>Rating: <strong>@Model.Rating <i class="fa fa-star text-warning"></i></strong></span>
                </div>
            </div>
        </div>

        <!-- Cảnh báo xóa -->
        <div class="warning-box">
            <div class="warning-title">
                <i class="fa fa-exclamation-circle"></i> Important Note
            </div>
            <p>This action cannot be undone. When you delete this review, all related data will be permanently removed from the system.</p>
        </div>

        <!-- Thông tin chi tiết review -->
        <div class="details-section">
            <h3 class="section-title">Review Details</h3>
            <div class="info-grid">
                <div class="info-item">
                    <div class="info-label">@Html.DisplayNameFor(model => model.Customer)</div>
                    <div class="info-value">@Html.DisplayFor(model => model.Customer)</div>
                </div>
                <div class="info-item">
                    <div class="info-label">@Html.DisplayNameFor(model => model.Email)</div>
                    <div class="info-value">@Html.DisplayFor(model => model.Email)</div>
                </div>
                <div class="info-item">
                    <div class="info-label">@Html.DisplayNameFor(model => model.Rating)</div>
                    <div class="info-value">@Html.DisplayFor(model => model.Rating) <i class="fa fa-star text-warning"></i></div>
                </div>
                <div class="info-item">
                    <div class="info-label">@Html.DisplayNameFor(model => model.CreatedAt)</div>
                    <div class="info-value">@Html.DisplayFor(model => model.CreatedAt)</div>
                </div>
                <div class="info-item">
                    <div class="info-label">@Html.DisplayNameFor(model => model.IsActive)</div>
                    <div class="info-value">@Html.DisplayFor(model => model.IsActive)</div>
                </div>
                <div class="info-item">
                    <div class="info-label">@Html.DisplayNameFor(model => model.User)</div>
                    <div class="info-value">@Html.DisplayFor(model => model.User.Id)</div>
                </div>
            </div>
        </div>

        <!-- Nội dung review -->
        <div class="details-section">
            <h3 class="section-title">Review Content</h3>
            <div class="text-block">
                @if (!string.IsNullOrEmpty(Model.Review))
                {
                    @Model.Review
                }
                else
                {
                    <span class="text-muted">No review content</span>
                }
            </div>
        </div>

        <!-- Action buttons -->
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="action-buttons">
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>