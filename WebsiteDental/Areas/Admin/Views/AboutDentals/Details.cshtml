@model WebsiteDental.Models.AboutDental
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body{
        background-color: white;
    }
    .content-wrapper {
        margin-left: 220px;
    }

    @@media (max-width: 768px) {
        .content-wrapper

    {
        margin-left: 0;
    }

    }
</style>

<div class="content-wrapper">
    <div class="container-fluid py-3">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm">
                        <div style="background-color: #2A3F54 !important; " class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Chi tiết About Dental</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <tbody>
                                    <tr>
                                        <th class="bg-light" style="width: 25%;">
                                            @Html.DisplayNameFor(model => model.Title)
                                        </th>
                                        <td style="width: 75%;">
                                            @Html.DisplayFor(model => model.Title)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">
                                            @Html.DisplayNameFor(model => model.Content)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.Content)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">
                                            @Html.DisplayNameFor(model => model.Description)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.Description)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">
                                            @Html.DisplayNameFor(model => model.IconPath)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.IconPath)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">
                                            @Html.DisplayNameFor(model => model.ImagePath)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.ImagePath)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">
                                            @Html.DisplayNameFor(model => model.StatValue1)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.StatValue1)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">
                                            @Html.DisplayNameFor(model => model.StatLabel1)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.StatLabel1)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">
                                            @Html.DisplayNameFor(model => model.CreatedDate)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.CreatedDate)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">
                                            @Html.DisplayNameFor(model => model.UpdatedDate)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.UpdatedDate)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">
                                            @Html.DisplayNameFor(model => model.IsActive)
                                        </th>
                                        <td>
                                            @if (Model.IsActive == true)
                                            {
                                                <span class="badge bg-success">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Không hoạt động</span>
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <div>
                                <a style="background-color: #2A3F54 !important; asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                                <i  class="bi bi-pencil-square"></i> Chỉnh sửa
                            </a>
                            <a asp-action="Index" class="btn btn-secondary ms-2">
                                <i class="bi bi-arrow-left"></i> Quay lại danh sách
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>